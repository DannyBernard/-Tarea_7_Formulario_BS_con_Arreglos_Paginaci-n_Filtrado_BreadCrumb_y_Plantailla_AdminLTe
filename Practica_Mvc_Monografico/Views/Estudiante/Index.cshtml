@model ReflectionIT.Mvc.Paging.PagingList<Practica_Mvc_Monografico.Models.Estudiante>

@{
	string t = "Lista de Estudiantes";
	ViewData["Title"] = t;
}

<h1>@t</h1>

<div>

	<form method="get" class="form-inline" asp-action="Index">
		<input name="filter" class="form-control" placeholder="Filtro"
			   value="@Model.RouteValue["Filter"]" />
		<button type="submit" class="btn  btn-default">
			<span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar
		</button>

		<a asp-action="Create" class="btn btn-primary btn-sm pull-right">
			<span class="glyphicon glyphicon-plus"></span>  Crear Estudiante
		</a>
	</form>
</div>
<br />
<div class="box box-info table-responsive">

		<table class="table table-bordered">
			<thead>
				<tr>
					<th>
						@Html.SortableHeaderFor(model => model.IDEstudiante)
					</th>
					<th>
						@Html.SortableHeaderFor(model => model.Matricuala)
					</th>
					<th>
						@Html.SortableHeaderFor(model => model.Cedula)
					</th>
					<th>
						@Html.SortableHeaderFor(model => model.FechaNacimiento)
					</th>
					<th>
						@Html.SortableHeaderFor(model => model.FechaIngreso)
					</th>
					<th>
						@Html.SortableHeaderFor(model => model.Nombre)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Apellido)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Sexo)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.EstadoCivil)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Ocupacion)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.TipoDeSangre)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Nacionalidad)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Religion)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Telefono)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Email)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.NombrePadre)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.NombreMadre)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Direccion)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Tipocolegio)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Carrera)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Observaciones)
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.IDEstudiante)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Matricuala)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Cedula)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.FechaNacimiento)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.FechaIngreso)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Nombre)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Apellido)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Sexo)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.EstadoCivil)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Ocupacion)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.TipoDeSangre)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Nacionalidad)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Religion)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Telefono)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Email)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.NombrePadre)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.NombreMadre)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Direccion)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Tipocolegio)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Carrera)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Observaciones)
						</td>
						<td>
							@Html.ActionLink("Editar", "Edit", new { id = item.IDEstudiante }) |
							@Html.ActionLink("Detalle", "Details", new { id = item.IDEstudiante }) |
							@Html.ActionLink("Borrar", "Delete", new { id = item.IDEstudiante })
						</td>
					</tr>
				}
			</tbody>
		</table>
</div>
