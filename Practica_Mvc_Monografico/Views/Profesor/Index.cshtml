@model ReflectionIT.Mvc.Paging.PagingList<Practica_Mvc_Monografico.Models.Profesor>
@{
	string t = "Borrar Profesor";
	ViewData["Title"] = t;
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>@t</h1>
<div>
	<form method="get" class="form-inline" asp-action="Index">
		<input name="filter" class="form-control" placeholder="Filtro"
			   value="@Model.RouteValue["Filter"]" />
		<button type="submit" class="btn  btn-default">
			<span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar
		</button>
		<br />
		<a asp-action="Create" class="btn btn-primary btn-sm pull-right">
			<span class="glyphicon glyphicon-plus"></span>  Crear Profesor
		</a>
		<br />
	</form>
</div>
<br />
<p>

</p>
<div class="box box-info table-responsive">
	<table class="table ">
		<thead>
			<tr>
				<th>
					@Html.SortableHeaderFor(model => model.IDProfesor)
				</th>
