@model ReflectionIT.Mvc.Paging.PagingList<Practica_Mvc_Monografico.Models.Empleado>

@{
    string t = "Listas de empleado";
    ViewData["Title"] = t;
    
}

<h1>@t</h1>
<div>
	
	<form method="get" class="form-inline" asp-action="Index">
		<input name="filter" class="form-control" placeholder="Filtro"
			   value="@Model.RouteValue["Filter"]" />
		<button type="submit" class="btn  btn-default">
			<span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar
		</button>
		<br />
		<a asp-action="Create" class="btn btn-primary btn-sm pull-right">
			<span class="glyphicon glyphicon-plus"></span>  Crear Empleado
		</a>
	</form>
	<br />
</div>
<br />
<p>
 
</p>
<div class="box box-info table-responsive">
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>
					@Html.SortableHeaderFor(model => model.IDEmpleado)
				</th>
				<th>
					@Html.SortableHeaderFor(model => model.Codigo)
				</th>
				<th>
					@Html.SortableHeaderFor(model => model.Cedula)
				</th>
				<th>
					@Html.SortableHeaderFor(model => model.FechaNacimiento)
				</th>
				<th>
					@Html.SortableHeaderFor(model => model.FechaIngreso)
				</th>
				<th>
					@Html.SortableHeaderFor(model => model.Nombre)
				</th>
				<th>
					@Html.SortableHeaderFor(model => model.Apellido)
				</th>
				<th>
					@Html.SortableHeaderFor(model => model.Sexo)
				</th>
				<th>
					@Html.SortableHeaderFor(model => model.EstadoCivil)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.TipoDeSangre)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Nacionalidad)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Religion)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Telefono)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Email)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Direccion)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Salario)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Departamento)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.NombreContacto)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.TelefonoContacto)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.AFP)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.ARS)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Observaciones)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.IDEmpleado)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Codigo)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Cedula)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.FechaNacimiento)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.FechaIngreso)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Nombre)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Apellido)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Sexo)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.EstadoCivil)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.TipoDeSangre)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Nacionalidad)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Religion)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Telefono)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Email)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Direccion)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Salario)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Departamento)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.NombreContacto)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.TelefonoContacto)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.AFP)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ARS)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Observaciones)
					</td>
					<td>
						@Html.ActionLink("Edit", "Edit", new { id = item.IDEmpleado }) |
						@Html.ActionLink("Details", "Details", new { id = item.IDEmpleado }) |
						@Html.ActionLink("Delete", "Delete", new { id = item.IDEmpleado })
					</td>
				</tr>
			}
		</tbody>
	</table>
	<nav aria-label="Roles navigation example">
		<vc:pager paging-list="@Model" />
	</nav>
</div>
